
define host{
        use linux-server
        host_name {{ instance_name }}
        alias {{ instance_name }}
        address {{ ansible_eth0.ipv4.address}}
}

define service {
        use                             generic-service
        service_description             SO : PING
        check_command                   check_ping!300.0,40%!800.0,80
        host_name                       {{ instance_name }}
}
